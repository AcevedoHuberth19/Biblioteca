@model Biblioteca.Models.Biblioteca.Nacionalidad

@{
    ViewBag.Title = "Edit";
}

<div class="card bg-success mb-3" style="width:30%;margin:0 auto;">
    <div class="card-header text-white">Editar Nacionalidad</div>
    <div class="card-body bg-light">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="row">
                <div class="col col-sm-12 col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Abreviatura, htmlAttributes: new { @class = "control-label" })
                        <div>
                            @Html.EditorFor(model => model.Abreviatura, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Abreviatura, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col col-sm-12 col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label" })
                        <div>
                            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col col-sm-6 col-md-6">
                    <div class="form-group">
                        <div>
                            <input type="submit" value="Editar" class="btn btn-success" />
                        </div>
                    </div>
                </div>

                <div class="col col-sm-6 col-md-6">
                    <div>
                        @Html.ActionLink("Regresar", "Index", new { }, new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
